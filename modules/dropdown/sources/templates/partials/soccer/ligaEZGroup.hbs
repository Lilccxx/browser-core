{{#if ligaEZGroup}}
    <div class="wrapper dropdown-tabs">
        <div class="background-placeholder"></div>
        {{#if groupTableHeader}}
            <label class="dropdown-tab-label">{{groupTableHeader}}</label>
        {{/if}}
        {{#each ligaEZGroup}}
            <input class="tab-radio-input" type="radio" name="tabs" id="tab-{{@index}}" {{#if @first}}checked="checked"{{/if}}/>
            <label class="dropdown-tab-label" for="tab-{{@index}}">{{groupName}}</label>
        {{/each}}
        {{#each ligaEZGroup}}
            <div id="tab-block-{{@index}}"
                 class="tab-block"
            >
                {{#with ligaEZTable}}
                    {{> partials/soccer/liga-table}}
                {{/with}}
            </div>
        {{/each}}
    </div>
{{/if}}
