<a class="result" data-url="{{ url }}" href="#">
    {{> partials/logo}}
    {{> partials/abstract}}
</a>

{{> partials/buttons}}

{{#if subResult}}
    <a class="result soccer-title" data-url="{{subResult.url}}" href="#">
        <span class="padded">{{subResult.title}}</span>
        <span class="soccer-domain divider">&#8212;</span>
        <span class="soccer-domain">{{ local 'soccer-api-provider' }}</span>
    </a>
{{/if}}

<div class="padded">
    <div class="soccer">

        {{> (lookup . 'currentPartial')}}

        <div>
            {{#if expandButton.show}}
                <a class="result expand-btn" data-url="{{expandButton.url}}" href="#">
                    {{local expandButton.title}}
                </a>
            {{/if}}

            <a class="result powered-by" data-url="{{poweredByResult.url}}" href="#">
                {{local poweredByResult.title}}
            </a>
        </div>

        {{> partials/soccer/news-injection}}

    </div>
</div>
